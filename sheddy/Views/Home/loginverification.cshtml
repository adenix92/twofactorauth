@model sheddy.Models.confirmationcode
@{
    ViewBag.Title = "loginverification";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="https://colorlib.com/etc/regform/colorlib-regform-7/images/signin-image.jpg" alt="sing up image"></figure>
                <a href="Index" class="signup-image-link">Create an account</a>
            </div>
            <div class="signin-form">
                <h2 class="form-title">Check your email for validation code</h2>

                @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, new { @class = "register-form", @id = "login-form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                       <p>An email was sent to @ViewBag.email with a verification code. Enter the code in that email click "Verify" button below.</p>
                    </div>
                    <div class="form-group">
                        <label for="your_name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        @Html.TextBoxFor(x=>x.verificationcode, htmlAttributes: new { @id = "verificationcode", @placeholder = "Enter verification code" })
                        @Html.ValidationMessageFor(x => x.verificationcode, "", new { @class = "text-danger" })
                    </div>
                  
                    
                    <div class="form-group form-button">
                        <input type="submit" name="verifycode" style="background-color:red;" id="verifycode" class="form-submit" value="Verify Code">
                    </div>
                }
                <div class="social-login">
                    <span class="social-label">Social</span>
                    <ul class="socials">
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

